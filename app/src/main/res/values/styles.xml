<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.EditProfile" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>

    <style name="AppTheme.VideoTrimmer" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppTheme.Profile" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CommentsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/ic_background_splash</item>
    </style>

    <style name="ButtonThemeGmail" parent="BaseButtonTheme">
        <item name="colorButtonNormal">@color/red_gmail</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/red_gmail</item>
    </style>

    <style name="ButtonThemeFacebook" parent="BaseButtonTheme">
        <item name="colorButtonNormal">@color/blue_facebook</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/blue_facebook
        </item>
    </style>

    <style name="ButtonThemeReport" parent="BaseButtonTheme">
        <item name="colorButtonNormal">@color/report_color</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/report_color
        </item>
    </style>


    <style name="ButtonThemeWhite" parent="BaseButtonTheme">
        <item name="colorButtonNormal">@color/silver</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/silver
        </item>
    </style>


    <style name="BaseButtonTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@color/clouds</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/colorAccent
        </item>
    </style>
</resources>
