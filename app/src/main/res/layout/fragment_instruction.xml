<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ash"
    android:orientation="vertical"
    android:padding="@dimen/margin16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin24dp"
            android:padding="@dimen/margin8dp"
            android:src="@drawable/ic_back_white"
            android:tint="@color/silver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/margin16dp"
            android:text="@string/instructions"
            android:textColor="@color/silver"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:padding="@dimen/margin4dp"
        android:text="@string/_1_the_quizzes_are_carefully_designed_to_educate_entertain_you"
        android:textColor="@color/silver"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:padding="@dimen/margin4dp"
        android:text="@string/_2_you_will_be_awarded_2_points_for_every_correct_answer_there_are_no_negative_points_for_wrong_answers"
        android:textColor="@color/silver"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:padding="@dimen/margin4dp"
        android:text="@string/_3_the_timer_is_set_once_you_start_the_quiz"
        android:textColor="@color/silver"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:padding="@dimen/margin4dp"
        android:text="@string/_4_you_can_change_answers_any_number_of_times_within_the_time_limit"
        android:textColor="@color/silver"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:padding="@dimen/margin4dp"
        android:text="@string/_5_you_can_attempt_one_quiz_only_once_however_you_can_always_view_questions_answers_of_attempted_quizzes"
        android:textColor="@color/silver"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin8dp"
        android:text="@string/good_luck"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin8dp"
        android:background="@drawable/ic_rectangle_grey"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed"
        android:foreground="?selectableItemBackgroundBorderless"
        android:paddingBottom="@dimen/margin16dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingTop="@dimen/margin16dp"
        android:text="@string/start"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>