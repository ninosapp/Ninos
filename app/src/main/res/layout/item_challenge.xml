<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="-3dp"
    android:layout_marginStart="-3dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:elevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin6dp">

        <com.ninos.views.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin6dp"
            android:background="@drawable/ic_account"
            android:paddingTop="@dimen/margin4dp" />

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/iv_profile"
            android:orientation="vertical"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="May 06,2017"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_challenge"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/ll_profile"
            android:layout_marginTop="@dimen/margin8dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_challenge"
            android:layout_marginBottom="@dimen/margin8dp"
            android:layout_marginTop="@dimen/margin8dp"
            android:paddingLeft="@dimen/margin8dp"
            android:paddingRight="@dimen/margin8dp">

            <ImageView
                android:id="@+id/iv_clap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_clap" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8dp"
                android:layout_toEndOf="@id/iv_clap"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_comment" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8dp"
                android:layout_toEndOf="@id/iv_comment"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_share" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_clap_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_clap_anim" />

    </RelativeLayout>


</android.support.v7.widget.CardView>